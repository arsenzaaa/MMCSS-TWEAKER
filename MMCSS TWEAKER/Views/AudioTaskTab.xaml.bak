<UserControl x:Class="MMCSSTweaker.Views.AudioTaskTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MMCSSTweaker.Controls"
             xmlns:core="clr-namespace:MMCSSTweaker.Core"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Group_AudioTaskSettings]}" Style="{StaticResource SubSectionHeaderStyle}"/>

        <Border Style="{StaticResource SettingGroupBorderStyle}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Affinity:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Affinity_Help]}"/>
                    <TextBox x:Name="Affinity" Grid.Column="1" Width="140" MaxLength="8" GotKeyboardFocus="UnsetTextBox_OnGotKeyboardFocus" PreviewTextInput="HexTextBox_OnPreviewTextInput"/>
                </Grid>
                <TextBlock
                    Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Affinity_Desc]}"
                    Style="{StaticResource SettingDescStyle}"
                    ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Affinity_Help]}"/>
                <Border Style="{StaticResource SettingParamDividerStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Latency Sensitive:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_LatencySensitive_Help]}"/>
                    <ComboBox x:Name="LatencySensitive" Grid.Column="1" Width="140">
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="True"/>
                    </ComboBox>
                </Grid>
                <TextBlock
                    Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_LatencySensitive_Desc]}"
                    Style="{StaticResource SettingDescStyle}"
                    ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_LatencySensitive_Help]}"/>
                <Border Style="{StaticResource SettingParamDividerStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Scheduling Category:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_SchedulingCategory_Help]}"/>
                    <ComboBox x:Name="SchedulingCategory" Grid.Column="1" Width="140" SelectionChanged="SchedulingCategory_OnSelectionChanged">
                        <ComboBoxItem Content="Low"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="High"/>
                    </ComboBox>
                </Grid>
                <TextBlock
                    Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_SchedulingCategory_Desc]}"
                    Style="{StaticResource SettingDescStyle}"
                    ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_SchedulingCategory_Help]}"/>

                <StackPanel x:Name="PriorityGroup" Visibility="Collapsed">
                    <Border Style="{StaticResource SettingParamDividerStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Priority:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Priority_Help]}"/>
                        <controls:IntUpDown x:Name="Priority" Grid.Column="1" Width="140" Minimum="1" Maximum="8" ValueChanged="AnyValueChanged"/>
                    </Grid>
                    <TextBlock
                        Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Priority_Desc]}"
                        Style="{StaticResource SettingDescStyle}"
                        ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_Priority_Help]}"/>
                </StackPanel>

                <StackPanel x:Name="BackgroundPriorityGroup" Visibility="Collapsed">
                    <Border Style="{StaticResource SettingParamDividerStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Background Priority:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_BackgroundPriority_Help]}"/>
                        <controls:IntUpDown x:Name="BackgroundPriority" Grid.Column="1" Width="140" Minimum="1" Maximum="8" ValueChanged="AnyValueChanged"/>
                    </Grid>
                    <TextBlock
                        Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_BackgroundPriority_Desc]}"
                        Style="{StaticResource SettingDescStyle}"
                        ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_BackgroundPriority_Help]}"/>
                </StackPanel>

                <StackPanel x:Name="YieldedPriorityGroup" Visibility="Collapsed">
                    <Border Style="{StaticResource SettingParamDividerStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Priority When Yielded:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_PriorityWhenYielded_Help]}"/>
                        <controls:IntUpDown x:Name="PriorityWhenYielded" Grid.Column="1" Width="140" Minimum="1" Maximum="19" ValueChanged="AnyValueChanged"/>
                    </Grid>
                    <TextBlock
                        Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_PriorityWhenYielded_Desc]}"
                        Style="{StaticResource SettingDescStyle}"
                        Margin="0,4,0,0"
                        ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Audio_PriorityWhenYielded_Help]}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource DividerLineStyle}"/>
        <TextBlock Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Group_ThreadStatus]}" Style="{StaticResource SubSectionHeaderStyle}"/>

        <Border Style="{StaticResource SettingGroupBorderStyle}" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Label_MmcssThread]}"
                    Foreground="{StaticResource MutedForeground}"
                    Margin="0,0,10,10"
                    Style="{StaticResource FieldLabelStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MmcssStatus" Text="" FontWeight="Bold" Foreground="{StaticResource NeonWhite}" Margin="0,0,0,10"/>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Label_AudioThreadPriority]}"
                    Foreground="{StaticResource MutedForeground}"
                    Margin="0,0,10,10"
                    Style="{StaticResource FieldLabelStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AudioThreadsPriority" Text="" FontWeight="Bold" Foreground="{StaticResource NeonWhite}" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0" x:Name="NdisLabel" Text="" Foreground="{StaticResource MutedForeground}" Margin="0,0,10,0" Style="{StaticResource FieldLabelStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="NdisStatus" Text="" FontWeight="Bold" Foreground="{StaticResource NeonWhite}" Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <StackPanel x:Name="NdisSettingsGroup" Orientation="Vertical">
            <Border Style="{StaticResource DividerLineStyle}"/>
            <TextBlock Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Group_NdisSettings]}" Style="{StaticResource SubSectionHeaderStyle}"/>
            <Border Style="{StaticResource SettingGroupBorderStyle}" Margin="0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ReceiveWorkerThreadPriority:" Style="{StaticResource SettingNameStyle}" Margin="0,0,16,0" ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Ndis_ReceiveWorkerThreadPriority_Help]}"/>
                        <controls:IntUpDown x:Name="ReceiveWorkerThreadPriority" Grid.Column="1" Width="140" Minimum="8" Maximum="31" ValueChanged="AnyValueChanged"/>
                    </Grid>
                    <TextBlock
                        Text="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Ndis_ReceiveWorkerThreadPriority_Desc]}"
                        Style="{StaticResource SettingDescStyle}"
                        Margin="0,4,0,0"
                        ToolTip="{Binding Source={x:Static core:LocalizationManager.Instance}, Path=[Ndis_ReceiveWorkerThreadPriority_Help]}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
