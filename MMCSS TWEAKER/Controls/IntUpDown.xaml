<UserControl x:Class="MMCSSTweaker.Controls.IntUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             VerticalAlignment="Center"
             d:DesignHeight="25"
             d:DesignWidth="120">
    <Border
        x:Name="RootBorder"
        Background="{StaticResource InputBackground}"
        BorderBrush="{StaticResource BorderBrushDark}"
        BorderThickness="1"
        CornerRadius="0"
        MinHeight="28"
        SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="26"/>
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="ValueTextBox"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{StaticResource LabelForeground}"
                Padding="6,3"
                VerticalContentAlignment="Center"
                GotKeyboardFocus="ValueTextBox_OnGotKeyboardFocus"
                PreviewTextInput="ValueTextBox_OnPreviewTextInput"
                TextChanged="ValueTextBox_OnTextChanged"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <RepeatButton
                    x:Name="UpButton"
                    Style="{StaticResource IntUpDownArrowButtonStyle}"
                    Click="UpButton_OnClick">
                    <Path
                        Width="8"
                        Height="6"
                        Data="M 0 6 L 4 0 L 8 6 Z"
                        Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RepeatButton}}"
                        Stretch="Fill"/>
                </RepeatButton>

                <RepeatButton
                    x:Name="DownButton"
                    Grid.Row="1"
                    Style="{StaticResource IntUpDownArrowButtonStyle}"
                    Click="DownButton_OnClick">
                    <Path
                        Width="8"
                        Height="6"
                        Data="M 0 0 L 4 6 L 8 0 Z"
                        Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RepeatButton}}"
                        Stretch="Fill"/>
                </RepeatButton>
            </Grid>
        </Grid>
    </Border>
</UserControl>
